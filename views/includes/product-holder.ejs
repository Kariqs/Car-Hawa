<article class="product-card">
    <p id="discount">
        -<%= product.discount %>%
    </p>
    <div class="product-image"><img src="<%= product.imageUrl %>" alt=<%=product.name %>></div>
    <div class="product-detail">
        <p id="name">
            <%= product.name %>
        </p>
        <p id="initial">Ksh.<%= product.initialPrice %>
        </p>
        <p id="selling">Ksh.<%= product.price %>
        </p>
    </div>
    <a class="view" href="/product/<%= product.id %>">View Product</a>
</article>