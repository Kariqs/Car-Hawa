<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs',{title:"Car-Hawa | View Product"}) %>
        <link rel="stylesheet" href="/css/view-product.css">
</head>

<body>
    <main>
        <%- include('../includes/header.ejs') %>
            <section class="product-holder">
                <div class="product-image">
                    <img src="<%= product.imageUrl %>" alt="">
                </div>

                <div class="action-div">
                    <div class="product-desc">
                        <p class="name">
                            <%= product.name %>
                        </p>

                        <p class="price">KSH <%= product.price %> <span
                                    style="text-decoration: line-through; font-weight: normal;">
                                    KSH <%= product.initialPrice %>
                                </span> <span id="discount">
                                    -<%=product.discount%>%
                                </span></p>
                        <form action="/cart" method="POST">
                            <input type="hidden" name="productId" id="productId" value="<%= product._id %>">
                            <button class="action">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </section>
            <section class="description">
                <h4>PRODUCT DESCRIPTION</h4>
                <p class="desc">
                    <%= product.description %>
                </p>
            </section>

            <section class="review">
                <h4>Product Review</h4>
                <form id="review-form" action="/review/<%= product._id %>" method="post">
                    <div class="rate">
                        <input type="text" name="review" id="review" placeholder="Leave a review for this product.">
                        <p class="rating">
                            <label for="rating">Rating</label>
                            <select name="rating" id="rating">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </p>
                    </div>
                    <button class="btn">Send Review</button>
                </form>
            </section>
    </main>
</body>

</html>