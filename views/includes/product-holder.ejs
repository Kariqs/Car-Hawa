<article class="product-card">
    <div class="product-image"><img src="<%= product.imageUrl %>" alt=<%=product.name %>></div>
    <div class="product-detail">
        <h4>
            <%= product.name %>
        </h4>
        <div class="price">
            <p id="selling">Ksh.<%= product.price %>
            </p>
            <p id="initial">Was Ksh.<%= product.initialPrice %>
            </p>
            <p id="discount">
                -<%= percentageDiscount %>%
            </p>
        </div>
    </div>
    <div class="action-buttons">
        <a class="btn" href="/product/<%= product._id %>">View Product</a>
        <form action="/admin/product/delete/<%= product.id %>" method="post">
            <input type="hidden" value="<%= product.id %>">
            <button class="btn" type="submit">Delete</button>
        </form>
        <a class="btn btn-alt" href="">Edit</a>
    </div>
</article>