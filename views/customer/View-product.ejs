<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs',{title:"Car-Hawa | View Product"}) %>
        <link rel="stylesheet" href="/css/view-product.css">
        <script src="/javascript/cart.js" defer></script>
        <script src="/javascript/review.js" defer></script>
</head>

<body>
    <main>
        <%- include('../includes/header.ejs') %>
            <p class="message" id="message">Error occured</p>
            <div class="sect">
                <section class="product-holder">
                    <div class="product-image">
                        <img src="<%= product.imageUrl %>" alt="">
                    </div>

                    <div class="action-div">
                        <div class="product-desc">
                            <p class="name">
                                <%= product.name %>
                            </p>

                            <p class="price">KSH <%= product.price %> <span
                                        style="text-decoration: line-through; font-weight: normal;">
                                        KSH <%= product.initialPrice %>
                                    </span> <span id="discount">
                                        -<%=product.discount%>%
                                    </span></p>
                            <input type="hidden" id="user" value="<%= isAuthenticated %>">
                            <input type="hidden" name="productId" id="productId" value="<%= product._id %>">
                            <input type="hidden" name="cq" id="cq" value="<%= cartItemCount %>">
                            <% if (!isAdmin) { %>
                                <button type="button" onclick="addToCart()" class="action"><i
                                        class="fas fa-shopping-cart cart-icon"></i> Add to Cart</button>
                                <% } %>
                        </div>
                    </div>
                </section>
                <section class="description">
                    <h4>PRODUCT DESCRIPTION</h4>
                    <p class="desc">
                        <%= product.description %>
                    </p>
                </section>

                <% if (!isAdmin) { %>
                    <section class="review">
                        <h4>Product Review</h4>
                        <input type="hidden" id="productId" name="productId" value="<%= product._id %>">
                        <div class="rate"> <input type="text" name="review" id="review"
                                placeholder="Leave a review for this product.">
                            <div class="rating-container">
                                <i class="fas fa-star" data-value="1"></i>
                                <i class="fas fa-star" data-value="2"></i>
                                <i class="fas fa-star" data-value="3"></i>
                                <i class="fas fa-star" data-value="4"></i>
                                <i class="fas fa-star" data-value="5"></i>
                            </div>
                        </div>
                        <button class="btn" onclick="postReview()">Send Review</button>
                    </section>
                    <% } %>
            </div>
    </main>
</body>

</html>