<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs', {title:"CAR-HAWA | My Cart"}) %>
        <link rel="stylesheet" href="/css/Homepage.css">
        <link rel="stylesheet" href="/css/product-holder.css">
        <link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <main>
        <%- include('../includes/header') %>
            <h1 id="heading">
                <% if (isAdmin) { %>
                    All Orders
                    <% }else{%>
                        My Orders
                        <%} %>
            </h1>
            <% if (orders.length <=0) { %>
                <h1>Nothing there!</h1>
                <% } else { %>
                    <ul class="orders">
                        <% orders.forEach(order=> { %>
                            <li class="orders__item">
                                <h1>Order - # <%= order._id %>
                                </h1>
                                <ul class="orders__products">
                                    <% order.products.forEach(p=> { %>
                                        <li class="orders__products-item">
                                            &#128073 <%= p.product.name %> <span id="qty">(<%= p.quantity %>)</span>
                                        </li>
                                        <% }); %>
                                </ul>
                                <% if (!isAdmin) { %>
                                    <h1>Status:<%= order.status %>
                                            <% } %>
                                                <% if (isAdmin) { %>
                                                    <form action="/status" method="post">
                                                        <select name="status" id="status">
                                                            <option value="Order Placed">Order Placed</option>
                                                            <option value="Out For Delivery">Out For Delivery</option>
                                                            <option value="Order Delivered">Order Complete</option>
                                                            <option value=""></option>
                                                        </select>
                                                    </form>
                                                    <% } %>
                                    </h1>
                            </li>
                            <% }); %>
                    </ul>
                    <% } %>
    </main>

</body>

</html>